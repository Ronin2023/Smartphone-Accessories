<?php
/**
 * Special Access Token Management
 * Admin Interface for managing special access tokens with passkey system
 */

session_start();
require_once '../includes/config.php';
require_once '../includes/db_connect.php';
require_once '../includes/functions.php';
require_once '../includes/special-access-manager.php';

// SECURITY: Check authentication
if (!isLoggedIn() || !hasAdminAccess()) {
    header('Location: login.php');
    exit;
}

$manager = getSpecialAccessManager();
$message = '';
$messageType = '';

// Handle actions
if ($_SERVER['REQUEST_METHOD'] === 'POST') {
    $action = $_POST['action'] ?? '';
    
    switch ($action) {
        case 'create_token':
            $name = trim($_POST['name'] ?? '');
            $email = trim($_POST['email'] ?? '');
            $description = trim($_POST['description'] ?? '');
            
            if (empty($name)) {
                $message = 'Name is required';
                $messageType = 'error';
            } else {
                $result = $manager->createToken($name, $email, $description, $_SESSION['user_id'] ?? null);
                
                if ($result['success']) {
                    $message = 'Token created successfully!';
                    $messageType = 'success';
                    // Store token details for display
                    $_SESSION['new_token'] = $result;
                } else {
                    $message = 'Failed to create token: ' . $result['error'];
                    $messageType = 'error';
                }
            }
            break;
            
        case 'revoke_token':
            $tokenId = intval($_POST['token_id'] ?? 0);
            $result = $manager->revokeToken($tokenId);
            
            if ($result['success']) {
                $message = 'Token revoked successfully';
                $messageType = 'success';
            } else {
                $message = 'Failed to revoke token: ' . $result['error'];
                $messageType = 'error';
            }
            break;
            
        case 'reactivate_token':
            $tokenId = intval($_POST['token_id'] ?? 0);
            $result = $manager->reactivateToken($tokenId);
            
            if ($result['success']) {
                $message = 'Token reactivated successfully';
                $messageType = 'success';
            } else {
                $message = 'Failed to reactivate token: ' . $result['error'];
                $messageType = 'error';
            }
            break;
    }
}

// Get all tokens
$tokens = $manager->getAllTokens();

// Check for newly created token
$newToken = null;
if (isset($_SESSION['new_token'])) {
    $newToken = $_SESSION['new_token'];
    unset($_SESSION['new_token']);
}
